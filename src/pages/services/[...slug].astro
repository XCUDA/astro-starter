                  <!-- Price Display -->
                  <div class="text-center p-4 bg-green-50 dark:bg-green-900/20 rounded-lg">
                    <div class="text-2xl font-bold text-green-600">
                      {service.data.price}
                    </div>
                    <div class="text-sm text-muted-foreground">
                      Dur√©e: {service.data.duration}
                    </div>
                  </div>

                  <!-- Contact Options -->
