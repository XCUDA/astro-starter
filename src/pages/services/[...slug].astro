      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl font-bold text-center mb-8">Autres Services</h2>
          <div class="text-center">
            <Button asChild>
              <a href="/services">
                Voir tous nos services
              </a>
            </Button>
          </div>
        </div>
      </div>
    </section>

  </div>
</Layout>