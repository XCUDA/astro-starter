import Layout from '@/components/layouts/Layout.astro';
import { getCollection, getEntry, type CollectionEntry } from 'astro:content';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Button } from '@/components/ui/button';

export async function getStaticPaths() {
  const services = await getCollection('services');
  return services.map((service: CollectionEntry<'services'>) => ({
    params: { slug: service.slug },
    props: { service },
  }));
}

type Props = {
  service: CollectionEntry<'services'>;
};

const { service } = Astro.props;
const { Content } = await service.render();

// Get booking info for contact details with proper typing
const bookingInfo = await getCollection('booking');
const contactInfo = bookingInfo.find((item: CollectionEntry<'booking'>) => item.data.type === 'schedule');

// ‚úÖ AJOUT SEO : Configuration SEO pour business th√©rapeute
const seoConfig = {
  businessName: "Cabinet Wellness Lausanne",
  location: "Lausanne",
  defaultTemplate: "therapist" as const,
  defaultKeywords: ["th√©rapie", "bien-√™tre", "Lausanne", "massage", "relaxation"],
  social: {
    facebook: "https://facebook.com/cabinet-wellness-lausanne",
    instagram: "https://instagram.com/cabinet.wellness"
  },
  analytics: {
    plausible: "cabinet-wellness.ch"
  }
};

// ‚úÖ AJOUT SEO : Customisation optionnelle pour services sp√©ciaux
let customSeo = undefined;
if (service.slug === 'massage-prenatal') {
  customSeo = {
    title: "Massage Pr√©natal Expert | Grossesse Sereine √† Lausanne",
    description: "Massage pr√©natal sp√©cialis√© par th√©rapeute certifi√©e. Soulagement douleurs grossesse, relaxation future maman. Lausanne centre.",
    keywords: ["massage pr√©natal", "grossesse", "future maman", "Lausanne", "douleurs grossesse", "th√©rapeute certifi√©e"],
    ogImage: "/images/massage-prenatal-og.jpg"
  };
}
---

<Layout 
