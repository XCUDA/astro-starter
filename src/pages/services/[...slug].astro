                  <CardTitle>Description du Service</CardTitle>
                </CardHeader>
                <CardContent className="prose prose-lg max-w-none">
                  <Content />
                </CardContent>
              </Card>

              <!-- Benefits -->
              {service.data.benefits.length > 0 && (
                <Card className="mt-6">
                  <CardHeader>
                    <CardTitle className="flex items-center gap-2">
                      <span>‚ú®</span> Bienfaits
                    </CardTitle>
                  </CardHeader>
                  <CardContent>
                    <ul class="grid md:grid-cols-2 gap-3">
                      {service.data.benefits.map((benefit: string) => (
                        <li class="flex items-start gap-2">
                          <span class="text-green-500 mt-1">‚úì</span>
                          <span>{benefit}</span>
                        </li>
                      ))}
                    </ul>
                  </CardContent>
                </Card>
              )}

              <!-- Suitable For & Contraindications -->
              <div class="grid md:grid-cols-2 gap-6 mt-6">
                {service.data.suitable_for.length > 0 && (
                  <Card>
                    <CardHeader>
                      <CardTitle className="text-green-600">Indiqu√© pour</CardTitle>
                    </CardHeader>
                    <CardContent>
                      <ul class="space-y-2">
