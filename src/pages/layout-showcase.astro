<script>
  // TypeScript-compliant script section
  declare global {
    interface Window {
      showTab: (tabName: string) => void;
      toggleDemoMenu: () => void;
      handleTabKeydown: (event: KeyboardEvent) => void;
    }
  }

  // ARIA Compliant Tab Management for Layout Showcase
  function showTab(tabName: string): void {
    // Hide all tab contents
    document.querySelectorAll('.tab-content').forEach((content) => {
      content.classList.add('hidden');
    });
    
    // Remove active state and set tabindex for all tab buttons
    document.querySelectorAll('[role="tab"]').forEach((button) => {
      button.classList.remove('active', 'border-primary', 'text-primary');
      button.classList.add('border-transparent', 'text-muted-foreground');
      button.setAttribute('aria-selected', 'false');
      button.setAttribute('tabindex', '-1');
    });
    
    // Show selected tab content
    const selectedContent = document.getElementById(`tab-${tabName}`);
    if (selectedContent) {
      selectedContent.classList.remove('hidden');
    }
    
    // Add active state to selected tab button
    const selectedButton = document.querySelector(`[data-tab="${tabName}"]`);
    if (selectedButton) {
      selectedButton.classList.add('active', 'border-primary', 'text-primary');
      selectedButton.classList.remove('border-transparent', 'text-muted-foreground');
      selectedButton.setAttribute('aria-selected', 'true');
      selectedButton.setAttribute('tabindex', '0');
      (selectedButton as HTMLElement).focus();
    }
  }

  // ARIA Compliant Keyboard Navigation for Tabs
  function handleTabKeydown(event: KeyboardEvent): void {
    const tabs = Array.from(document.querySelectorAll('[role="tab"]')) as HTMLElement[];
    const currentTab = event.target as HTMLElement;
    const currentIndex = tabs.indexOf(currentTab);
    
    switch (event.key) {
      case 'ArrowLeft':
        event.preventDefault();
        const prevIndex = currentIndex === 0 ? tabs.length - 1 : currentIndex - 1;
        const prevTab = tabs[prevIndex];
        const prevTabName = prevTab.getAttribute('data-tab');
        if (prevTabName) {
          showTab(prevTabName);
        }
        break;
        
      case 'ArrowRight':
        event.preventDefault();
        const nextIndex = (currentIndex + 1) % tabs.length;
        const nextTab = tabs[nextIndex];
        const nextTabName = nextTab.getAttribute('data-tab');
        if (nextTabName) {
          showTab(nextTabName);
        }
        break;
        
      case 'Home':
        event.preventDefault();
        const firstTab = tabs[0];
        const firstTabName = firstTab.getAttribute('data-tab');
        if (firstTabName) {
          showTab(firstTabName);
        }
        break;
        
      case 'End':
        event.preventDefault();
        const lastTab = tabs[tabs.length - 1];
        const lastTabName = lastTab.getAttribute('data-tab');
        if (lastTabName) {
          showTab(lastTabName);
        }
        break;
    }
  }

  // Demo Navigation Menu Toggle - separate from main header
  function toggleDemoMenu(): void {
    const menu = document.getElementById('demo-mobile-menu');
    const button = document.querySelector('[aria-controls="demo-mobile-menu"]') as HTMLElement;
    
    if (menu && button) {
      const isHidden = menu.classList.contains('hidden');
      
      if (isHidden) {
        menu.classList.remove('hidden');
        button.setAttribute('aria-expanded', 'true');
      } else {
        menu.classList.add('hidden');
        button.setAttribute('aria-expanded', 'false');
      }
    }
  }

  // Make functions globally available
  if (typeof window !== 'undefined') {
    window.showTab = showTab;
    window.toggleDemoMenu = toggleDemoMenu;
    window.handleTabKeydown = handleTabKeydown;
  }

  // Initialize first tab as active when page loads
  document.addEventListener('DOMContentLoaded', () => {
    showTab('navigation');
  });
</script>

