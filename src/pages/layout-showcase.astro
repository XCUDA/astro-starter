<script>
  // Custom Tab Management for Layout Showcase
  function showTab(tabName) {
    // Hide all tab contents
    document.querySelectorAll('.tab-content').forEach((content) => {
      content.classList.add('hidden');
    });
    
    // Remove active state from all tab buttons
    document.querySelectorAll('.tab-button').forEach((button) => {
      button.classList.remove('active', 'border-primary', 'text-primary');
      button.classList.add('border-transparent', 'text-muted-foreground');
    });
    
    // Show selected tab content
    const selectedContent = document.getElementById(`tab-${tabName}`);
    if (selectedContent) {
      selectedContent.classList.remove('hidden');
    }
    
    // Add active state to selected tab button
    const selectedButton = document.querySelector(`[data-tab="${tabName}"]`);
    if (selectedButton) {
      selectedButton.classList.add('active', 'border-primary', 'text-primary');
      selectedButton.classList.remove('border-transparent', 'text-muted-foreground');
    }
  }

  // Demo Navigation Menu Toggle - separate from main header
  function toggleDemoMenu() {
    const menu = document.getElementById('demo-mobile-menu');
    if (menu) {
      menu.classList.toggle('hidden');
    }
  }

  // Make functions globally available with unique names
  if (typeof window !== 'undefined') {
    window.showTab = showTab;
    window.toggleDemoMenu = toggleDemoMenu;
  }

  // Initialize first tab as active when page loads
  document.addEventListener('DOMContentLoaded', () => {
    showTab('navigation');
  });
</script>
