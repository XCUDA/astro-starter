<script>
  // Enhanced FAQ search and filter functionality with full accessibility
  interface FAQSearchState {
    searchTerm: string;
    activeCategory: string;
    visibleItems: Set<Element>;
  }

  const searchState: FAQSearchState = {
    searchTerm: '',
    activeCategory: 'all',
    visibleItems: new Set()
  };

  // DOM elements
  const searchInput = document.getElementById('faq-search') as HTMLInputElement;
  const filterButtons = document.querySelectorAll('.filter-btn');
  const faqItems = document.querySelectorAll('.faq-item');
  const faqSections = document.querySelectorAll('.faq-section');
  const noResultsMessage = document.getElementById('no-results');

  // Announcement for screen readers
  const announceRef = document.createElement('div');
  announceRef.className = 'sr-only';
  announceRef.setAttribute('aria-live', 'polite');
  announceRef.setAttribute('aria-atomic', 'true');
  document.body.appendChild(announceRef);

  function announceChange(message: string) {
    announceRef.textContent = message;
  }

  // Search functionality
  function performSearch() {
    const searchTerm = searchInput.value.toLowerCase().trim();
    searchState.searchTerm = searchTerm;
    
    let visibleCount = 0;
    
    faqItems.forEach(item => {
      const searchTerms = item.getAttribute('data-search-terms') || '';
      const questionText = item.querySelector('summary')?.textContent?.toLowerCase() || '';
      const answerText = item.querySelector('div')?.textContent?.toLowerCase() || '';
      
      const matchesSearch = !searchTerm || 
        searchTerms.includes(searchTerm) ||
        questionText.includes(searchTerm) ||
        answerText.includes(searchTerm);
      
      const matchesCategory = searchState.activeCategory === 'all' ||
        item.closest(`[data-category="${searchState.activeCategory}"]`);
      
      const isVisible = matchesSearch && matchesCategory;
      
      if (isVisible) {
        (item as HTMLElement).style.display = 'block';
        searchState.visibleItems.add(item);
        visibleCount++;
      } else {
        (item as HTMLElement).style.display = 'none';
        searchState.visibleItems.delete(item);
      }
    });
    
    // Show/hide sections based on visible items
    faqSections.forEach(section => {
      const sectionItems = section.querySelectorAll('.faq-item');
      const hasVisibleItems = Array.from(sectionItems).some(item => 
        searchState.visibleItems.has(item)
      );
      
      if (hasVisibleItems || searchState.activeCategory === 'all') {
        (section as HTMLElement).style.display = 'block';
      } else {
        (section as HTMLElement).style.display = 'none';
      }
    });
    
    // Show/hide no results message
    if (noResultsMessage) {
      if (visibleCount === 0) {
        noResultsMessage.classList.remove('hidden');
        announceChange('No FAQ items found. Try different keywords or clear your search.');
      } else {
        noResultsMessage.classList.add('hidden');
        announceChange(`${visibleCount} FAQ items found.`);
      }
    }
  }

  // Category filter functionality
  function setActiveCategory(category: string, button: Element) {
    searchState.activeCategory = category;
    
    // Update button states
    filterButtons.forEach(btn => {
      btn.classList.remove('active');
      btn.setAttribute('aria-pressed', 'false');
    });
    
    button.classList.add('active');
    button.setAttribute('aria-pressed', 'true');
    
    performSearch();
    
    // Announce category change
    const categoryName = category === 'all' ? 'all categories' : category.replace('-', ' ');
    announceChange(`Filtered to ${categoryName}.`);
  }

  // Clear search function
  function clearSearch() {
    searchInput.value = '';
    searchState.searchTerm = '';
    searchState.activeCategory = 'all';
    
    // Reset active button
    filterButtons.forEach(btn => {
      btn.classList.remove('active');
      btn.setAttribute('aria-pressed', 'false');
    });
    
    const allButton = document.querySelector('[data-category="all"]');
    if (allButton) {
      allButton.classList.add('active');
      allButton.setAttribute('aria-pressed', 'true');
    }
    
    performSearch();
    searchInput.focus();
    announceChange('Search cleared. Showing all FAQ items.');
  }

  // Clear search button event listener
  const clearSearchBtn = document.getElementById('clear-search-btn');
  if (clearSearchBtn) {
    clearSearchBtn.addEventListener('click', clearSearch);
  }

  // Event listeners
  if (searchInput) {
    searchInput.addEventListener('input', performSearch);
    searchInput.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') {
        clearSearch();
      }
    });
  }

  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const category = button.getAttribute('data-category') || 'all';
      setActiveCategory(category, button);
    });
    
    // Initialize ARIA attributes
    button.setAttribute('role', 'button');
    button.setAttribute('aria-pressed', button.classList.contains('active') ? 'true' : 'false');
  });

  // Enhanced keyboard navigation for FAQ items
  faqItems.forEach(item => {
    const summary = item.querySelector('summary');
    
    if (summary) {
      summary.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          const details = item as HTMLDetailsElement;
          details.open = !details.open;
          
          // Announce state change
          const questionText = summary.textContent?.trim() || 'FAQ item';
          announceChange(`${questionText} ${details.open ? 'expanded' : 'collapsed'}.`);
        }
      });
    }
  });

  // Initial setup
  performSearch();
</script>

