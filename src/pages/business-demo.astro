---
// Business Demo Page - Complete Showcase of Business Potential
// Production-ready business layouts for professional websites
// Path: src/pages/business-demo.astro

import Layout from '../components/layouts/Layout.astro';
import TouchNavigation from '../components/islands/TouchNavigation';
// Using only existing components - no invented islands
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/card';
import { Badge } from '../components/ui/badge';
import { Button } from '../components/ui/button';
---

<Layout 
  title="Business Layouts Showcase - Professional Website Templates"
  description="Explore 4 production-ready business layout variants for corporate, startup, e-commerce and portfolio websites"
  currentPage="business-demo"
  headerVariant="business"
  footerVariant="comprehensive"
  showCTA={true}
  ctaText="Get Started"
  ctaHref="/get-started"
  showBusinessInfo={true}
  showNewsletter={true}
>
  
  <!-- Skip Links for Accessibility -->
  <div class="sr-only">
    <a href="#main-content" class="focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary text-primary-foreground px-4 py-2 rounded">
      Skip to main content
