              <CardHeader className="pb-3">
                <CardTitle className="text-lg">Bottom Navigation</CardTitle>
                <CardDescription>Mobile E-commerce</CardDescription>
              </CardHeader>
              <CardContent className="relative h-full">
                <TouchNavigation 
                  variant="bottom-nav"
                  currentPage="business-demo"
