    <a href="#interactive-content" class="focus:not-sr-only focus:absolute focus:top-4 focus:left-20 bg-primary text-primary-foreground px-4 py-2 rounded">
      Skip to interactive features
    </a>
  </div>

  <!-- Page Entry with CSS Animation -->
  <div class="animate-fade-in-up">

  <!-- Hero Section with Professional Focus -->
  <section class="bg-gradient-to-br from-primary/10 via-background to-secondary/10 py-20" role="banner" aria-labelledby="hero-title">
