---
// Startup Demo Page - Modern Landing Page Layout
// Production-ready startup design for SaaS and tech companies
// Path: src/pages/startup-demo.astro

import Layout from '../components/layouts/Layout.astro';
import TouchNavigation from '../components/islands/TouchNavigation';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/card';
import { Badge } from '../components/ui/badge';
import { Button } from '../components/ui/button';
---

<Layout 
  title="TaskFlow AI - Productivity Redefined | Modern SaaS Platform"
  description="Revolutionary AI-powered task management that adapts to your workflow - boost productivity by 40%"
  currentPage="startup-demo"
  headerVariant="landing"
  footerVariant="startup"
  showCTA={true}
  ctaText="Try Free"
  ctaHref="/signup"
  showNewsletter={true}
  showSocials={true}
  companyName="TaskFlow AI"
  siteDescription="AI-powered productivity platform trusted by 10,000+ teams"
>
  
  <!-- Skip Links for Accessibility -->
  <div class="sr-only">
    <a href="#main-content" class="focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary text-primary-foreground px-4 py-2 rounded">
      Skip to main content
    </a>
    <a href="#interactive-content" class="focus:not-sr-only focus:absolute focus:top-4 focus:left-20 bg-primary text-primary-foreground px-4 py-2 rounded">
      Skip to interactive features
    </a>
  </div>

  <!-- Page Entry Animation -->
  <div class="animate-fade-in-up">

  <!-- Hero Startup -->
  <section class="bg-gradient-to-br from-primary/10 via-background to-secondary/20 py-24" role="banner" aria-labelledby="hero-title">
    <div class="container mx-auto px-4">
      <div class="max-w-5xl mx-auto text-center animate-fade-in-up">
        
        <Badge variant="default" className="mb-6 bg-gradient-to-r from-primary to-secondary text-white animate-pulse" role="status" aria-label="Company funding and accelerator status">
          üöÄ YC S23 ‚Ä¢ $2M Seed Round
        </Badge>
        
        <h1 id="hero-title" class="text-5xl lg:text-7xl font-bold text-foreground mb-6">
          Productivity
          <span class="bg-gradient-to-r from-primary via-purple-500 to-secondary bg-clip-text text-transparent">
            Redefined
          </span>
        </h1>
        
        <p class="text-2xl text-muted-foreground mb-8 leading-relaxed max-w-3xl mx-auto">
          The only AI task manager that <strong>learns your workflow</strong> and optimizes your day automatically. 
          Join <strong>10,000+ teams</strong> boosting productivity by 40%.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12" role="group" aria-label="Primary conversion actions">
          <Button size="lg" className="text-xl px-12 py-4 bg-gradient-to-r from-primary to-secondary hover:scale-105 transition-transform duration-300" aria-label="Start free trial of TaskFlow AI productivity platform">
            <span class="mr-2" aria-hidden="true">‚ö°</span>
            Start Free Trial
          </Button>
          <Button variant="outline" size="lg" className="text-xl px-8 py-4 hover:scale-105 transition-transform" aria-label="Watch 2-minute product demonstration video">
            <span class="mr-2" aria-hidden="true">‚ñ∂Ô∏è</span>
            Watch Demo (2 min)
          </Button>
        </div>

        <!-- Social Proof -->
        <div class="flex items-center justify-center space-x-8 mb-16 text-muted-foreground animate-fade-in-up" role="list" aria-label="Company credentials and social proof">
          <div class="flex items-center space-x-2 hover:scale-105 transition-transform" role="listitem">
            <span class="text-yellow-500" aria-hidden="true">‚≠ê</span>
            <span class="font-medium" role="status" aria-label="Product Hunt rating: 4.9 out of 5">4.9/5</span>
            <span>Product Hunt</span>
          </div>
          <div class="flex items-center space-x-2 hover:scale-105 transition-transform" role="listitem">
            <span class="text-green-500" aria-hidden="true">‚úì</span>
            <span class="font-medium" role="status" aria-label="SOC 2 security compliance certified">SOC 2</span>
            <span>Compliant</span>
          </div>
          <div class="flex items-center space-x-2 hover:scale-105 transition-transform" role="listitem">
            <span class="text-blue-500" aria-hidden="true">üîí</span>
            <span class="font-medium" role="status" aria-label="GDPR privacy regulation ready">GDPR</span>
            <span>Ready</span>
          </div>
        </div>

        <!-- Product Preview -->
        <div class="relative animate-fade-in-up" role="region" aria-labelledby="product-preview">
          <div class="bg-gradient-to-r from-primary/20 to-secondary/20 rounded-2xl p-8 backdrop-blur-sm border border-primary/20 hover:scale-[1.02] transition-transform duration-500">
            <div class="bg-card rounded-xl p-6 shadow-2xl">
              <div class="flex items-center space-x-2 mb-4">
                <div class="w-3 h-3 rounded-full bg-red-500" aria-hidden="true"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500" aria-hidden="true"></div>
                <div class="w-3 h-3 rounded-full bg-green-500" aria-hidden="true"></div>
                <div id="product-preview" class="ml-4 text-sm text-muted-foreground">TaskFlow AI Dashboard</div>
              </div>
              <div class="grid grid-cols-3 gap-4 text-left" role="region" aria-label="Dashboard feature preview">
                <div class="space-y-2 hover:bg-muted/50 p-2 rounded transition-colors" role="group" aria-labelledby="todays-focus">
                  <div id="todays-focus" class="text-sm font-medium">üìã Today's Focus</div>
                  <div class="text-xs text-muted-foreground">‚Ä¢ Complete user research</div>
                  <div class="text-xs text-muted-foreground">‚Ä¢ Review pull requests</div>
                  <div class="text-xs text-muted-foreground">‚Ä¢ Team standup at 2pm</div>
                </div>
                <div class="space-y-2 hover:bg-primary/5 p-2 rounded transition-colors" role="group" aria-labelledby="ai-suggestions">
                  <div id="ai-suggestions" class="text-sm font-medium">ü§ñ AI Suggestions</div>
                  <div class="text-xs text-primary">‚Ä¢ Block calendar for deep work</div>
                  <div class="text-xs text-primary">‚Ä¢ Delegate review tasks</div>
                  <div class="text-xs text-primary">‚Ä¢ Schedule follow-up</div>
                </div>
                <div class="space-y-2 hover:bg-green-50 dark:hover:bg-green-950/20 p-2 rounded transition-colors" role="group" aria-labelledby="productivity-stats">
                  <div id="productivity-stats" class="text-sm font-medium">üìä Productivity</div>
                  <div class="text-xs text-green-600" role="status" aria-label="Productivity increase: 40 percent this week">+40% this week</div>
                  <div class="text-xs text-muted-foreground" role="status" aria-label="Peak productivity time: 10 to 12 AM">Peak: 10-12am</div>
                  <div class="text-xs text-muted-foreground" role="status" aria-label="Flow time: 3.2 hours">Flow time: 3.2h</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <main id="main-content" role="main">

    <!-- Features -->
    <section class="py-20" role="region" aria-labelledby="features-title">
      <div class="container mx-auto px-4">
        <h2 id="features-title" class="text-4xl font-bold text-center mb-16 animate-fade-in-left">
          Built for Modern Teams
        </h2>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8" role="list" aria-label="Product features and capabilities">
          <Card className="border-primary/20 hover:shadow-lg transition-all duration-300 hover:scale-105 animate-fade-in-up" role="listitem">
            <CardHeader>
              <div class="text-4xl mb-4" aria-hidden="true">üß†</div>
              <CardTitle className="text-xl">AI-Powered Intelligence</CardTitle>
              <CardDescription>Learns your patterns and optimizes automatically</CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="space-y-2 text-sm text-muted-foreground" role="list" aria-label="AI intelligence features">
                <li role="listitem">‚Ä¢ Smart task prioritization</li>
                <li role="listitem">‚Ä¢ Automatic time blocking</li>
                <li role="listitem">‚Ä¢ Predictive scheduling</li>
                <li role="listitem">‚Ä¢ Context-aware suggestions</li>
              </ul>
            </CardContent>
          </Card>

          <Card className="border-secondary/20 hover:shadow-lg transition-all duration-300 hover:scale-105 animate-fade-in-up" role="listitem">
            <CardHeader>
              <div class="text-4xl mb-4" aria-hidden="true">‚ö°</div>
              <CardTitle className="text-xl">Lightning Fast</CardTitle>
              <CardDescription>Built for speed with modern technology</CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="space-y-2 text-sm text-muted-foreground" role="list" aria-label="Performance features">
                <li role="listitem">‚Ä¢ Sub-100ms response times</li>
                <li role="listitem">‚Ä¢ Offline-first architecture</li>
                <li role="listitem">‚Ä¢ Real-time collaboration</li>
                <li role="listitem">‚Ä¢ Instant sync across devices</li>
              </ul>
            </CardContent>
          </Card>

          <Card className="border-purple-500/20 hover:shadow-lg transition-all duration-300 hover:scale-105 animate-fade-in-up" role="listitem">
            <CardHeader>
              <div class="text-4xl mb-4" aria-hidden="true">üîó</div>
              <CardTitle className="text-xl">Deep Integrations</CardTitle>
              <CardDescription>Works with your existing workflow</CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="space-y-2 text-sm text-muted-foreground" role="list" aria-label="Integration capabilities">
                <li role="listitem">‚Ä¢ Slack, Teams, Discord</li>
                <li role="listitem">‚Ä¢ GitHub, Linear, Jira</li>
                <li role="listitem">‚Ä¢ Calendar sync (Google, Outlook)</li>
                <li role="listitem">‚Ä¢ 50+ app integrations</li>
              </ul>
            </CardContent>
          </Card>
        </div>
      </div>
    </section>

    <!-- Interactive Content -->
    <section id="interactive-content" class="py-16 bg-gradient-to-r from-primary/5 to-secondary/5" role="region" aria-labelledby="demo-config-title">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto">
          <div class="bg-card/80 backdrop-blur-sm border border-primary/20 rounded-xl p-8 animate-fade-in-right">
            <h3 id="demo-config-title" class="text-2xl font-bold mb-6 text-center">
              üöÄ Startup Layout Configuration
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div>
                <h3 class="font-semibold mb-4">Layout Configuration:</h3>
                <div class="bg-muted/50 rounded-lg p-4 font-mono text-sm space-y-1 hover:bg-muted/70 transition-colors" role="code" aria-label="Startup layout configuration code">
                  <div>headerVariant="landing"</div>
                  <div>footerVariant="startup"</div>
                  <div>showHeaderCTA={`{true}`}</div>
                  <div>headerCTAText="Try Free"</div>
                  <div>showNewsletter={`{true}`}</div>
                  <div>showSocials={`{true}`}</div>
                </div>
              </div>
              
              <div>
                <h3 class="font-semibold mb-4">Startup Features:</h3>
                <ul class="space-y-2 text-sm" role="list" aria-label="Activated startup layout features">
                  <li class="flex items-center space-x-2 hover:bg-green-50 dark:hover:bg-green-950/20 p-1 rounded transition-colors" role="listitem">
                    <span class="text-green-500" aria-hidden="true">‚úì</span>
                    <span>Landing header with conversion CTA</span>
                  </li>
                  <li class="flex items-center space-x-2 hover:bg-green-50 dark:hover:bg-green-950/20 p-1 rounded transition-colors" role="listitem">
                    <span class="text-green-500" aria-hidden="true">‚úì</span>
                    <span>Startup footer with newsletter signup</span>
                  </li>
                  <li class="flex items-center space-x-2 hover:bg-green-50 dark:hover:bg-green-950/20 p-1 rounded transition-colors" role="listitem">
                    <span class="text-green-500" aria-hidden="true">‚úì</span>
                    <span>Social proof and credibility badges</span>
                  </li>
                  <li class="flex items-center space-x-2 hover:bg-green-50 dark:hover:bg-green-950/20 p-1 rounded transition-colors" role="listitem">
                    <span class="text-green-500" aria-hidden="true">‚úì</span>
                    <span>Modern design with gradients and animations</span>
                  </li>
                  <li class="flex items-center space-x-2 hover:bg-green-50 dark:hover:bg-green-950/20 p-1 rounded transition-colors" role="listitem">
                    <span class="text-green-500" aria-hidden="true">‚úì</span>
                    <span>Touch navigation for mobile users</span>
                  </li>
                </ul>
              </div>
            </div>

            <div class="mt-8 flex flex-wrap justify-center gap-4" role="group" aria-label="Navigate to other demo pages">
              <Button variant="outline" size="sm" className="hover:scale-105 transition-transform" aria-label="View corporate demo with professional business design">
                <a href="/corporate-demo">üè¢ View Corporate Demo</a>
              </Button>
              <Button variant="outline" size="sm" className="hover:scale-105 transition-transform" aria-label="View e-commerce demo with shopping and catalog features">
                <a href="/ecommerce-demo">üõí View E-commerce Demo</a>
              </Button>
              <Button variant="outline" size="sm" className="hover:scale-105 transition-transform" aria-label="View portfolio demo with creative minimal layout">
                <a href="/portfolio-demo">üé® View Portfolio Demo</a>
              </Button>
              <Button size="sm" className="hover:scale-105 transition-transform" aria-label="Return to main business demo overview page">
                <a href="/business-demo">‚Üê Return to Business Demo</a>
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>

  </main>

  <!-- Touch Navigation for Mobile Experience -->
  <TouchNavigation 
    variant="floating-fab"
    showBackToTop={true}
    currentPage="startup-demo"
    client:load
    aria-label="Floating action button for quick navigation and back to top functionality"
  />

  </div>

</Layout>