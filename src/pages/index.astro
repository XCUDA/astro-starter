---
// index.astro - Home page using our professional layout architecture
// This demonstrates how clean and maintainable page-specific code becomes 
// when using a well-structured layout system

// Import our professional layout component
import Layout from '../components/layouts/Layout.astro';

// Page-specific metadata that will be passed to our layout
// This approach keeps SEO management centralized while allowing per-page customization
const pageTitle = "Welcome to Your Professional Astro Starter";
const pageDescription = "Experience the power of Astro 5 combined with TailwindCSS 4 and shadcn/ui for building lightning-fast, accessible web applications.";
const pageKeywords = "astro 5, tailwindcss 4, shadcn/ui, professional starter, web development";
---

<!-- 
  Notice how clean this becomes: we pass our page-specific data to the layout
  and focus only on the content that makes this page unique
-->
<Layout 
  title={pageTitle}
  description={pageDescription}
  keywords={pageKeywords}
>
  <!-- Hero section with modern TailwindCSS 4 styling -->
  <section class="bg-gradient-to-br from-primary/10 via-background to-secondary/10 py-20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Main headline with improved typography -->
        <h1 class="text-4xl md:text-6xl font-bold tracking-tight text-foreground mb-6">
          Professional 
          <span class="text-primary">Astro</span> 
          Starter
        </h1>
        
        <!-- Subheadline with semantic color classes -->
        <p class="text-xl md:text-2xl text-muted-foreground mb-8 max-w-2xl mx-auto leading-relaxed">
          Built with cutting-edge technologies for maximum performance, 
          accessibility, and developer experience. Ready for your next project.
        </p>
        
        <!-- Call-to-action buttons demonstrating button styling -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="bg-primary text-primary-foreground px-8 py-3 rounded-lg font-semibold 
                         hover:bg-primary/90 transition-colors duration-200
                         focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">
            Get Started
          </button>
          <button class="border border-border text-foreground px-8 py-3 rounded-lg font-semibold
                         hover:bg-accent hover:text-accent-foreground transition-colors duration-200
                         focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2">
            View Documentation
          </button>
        </div>
      </div>
    </div>
  </section>

