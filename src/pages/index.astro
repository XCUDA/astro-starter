<script>
	import DarkModeToggle from '../components/islands/DarkModeToggle.tsx';
	import { createElement } from 'react';
	import { createRoot } from 'react-dom/client';

	// Mount Dark Mode Toggle with accessibility verification
	const toggleContainer = document.getElementById('dark-mode-toggle');
	if (toggleContainer) {
		// Ensure container is focusable and has proper ARIA
		toggleContainer.setAttribute('tabindex', '0');
		
		const root = createRoot(toggleContainer);
		root.render(createElement(DarkModeToggle));
	}
</script>