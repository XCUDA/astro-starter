---
// navigation-showcase.astro - Showcase Navigation & Feedback Components  
// Path: /src/pages/navigation-showcase.astro
import Layout from '../components/layouts/Layout.astro';
import NavigationShowcaseDemo from '../components/islands/NavigationShowcaseDemo.tsx';
import DarkModeToggle from '../components/islands/DarkModeToggle.tsx';
import Navigation from '../components/layouts/Navigation.astro';
---

<Layout title="Navigation & Feedback - User Guidance Components">
  <main role="main">
    <section class="py-20 min-h-screen" aria-labelledby="main-heading">
      <div class="container mx-auto px-4 max-w-6xl">
        
        <!-- Header avec dark mode toggle -->
        <header class="flex justify-between items-center mb-12">
          <div>
            <h1 id="main-heading" class="text-4xl font-bold text-foreground mb-4">
              🧭 Navigation & Feedback Components
            </h1>
            <p class="text-lg text-muted-foreground">
              User guidance and feedback systems - 4 essential navigation components
            </p>
          </div>
          <DarkModeToggle client:load />
        </header>

        <!-- Navigation Components Overview -->
        <section 
          class="bg-card border border-border rounded-lg p-6 mb-12"
          aria-labelledby="components-heading"
          role="region"
        >
          <h2 id="components-heading" class="text-xl font-semibold text-card-foreground mb-4">
            🧭 Navigation Component System - User Guidance
          </h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4" role="list" aria-label="Navigation components status">
            <div class="flex items-center gap-2" role="listitem">
              <span class="w-3 h-3 bg-green-500 rounded-full" aria-hidden="true"></span>
              <span class="font-medium text-sm">Breadcrumb</span>
              <span class="text-xs text-muted-foreground">✅</span>
            </div>
            <div class="flex items-center gap-2" role="listitem">
              <span class="w-3 h-3 bg-green-500 rounded-full" aria-hidden="true"></span>
              <span class="font-medium text-sm">Tabs</span>
              <span class="text-xs text-muted-foreground">✅</span>
            </div>
            <div class="flex items-center gap-2" role="listitem">
              <span class="w-3 h-3 bg-green-500 rounded-full" aria-hidden="true"></span>
              <span class="font-medium text-sm">Alert</span>
              <span class="text-xs text-muted-foreground">✅</span>
            </div>
            <div class="flex items-center gap-2" role="listitem">
              <span class="w-3 h-3 bg-green-500 rounded-full" aria-hidden="true"></span>
              <span class="font-medium text-sm">Badge</span>
              <span class="text-xs text-muted-foreground">✅</span>
            </div>
          </div>
          <div 
            class="mt-4 bg-green-50 dark:bg-green-950 border border-green-200 dark:border-green-800 rounded p-3"
            role="note"
            aria-labelledby="objective-text"
          >
            <p id="objective-text" class="text-sm text-green-700 dark:text-green-300">
              <strong>✅ Complete Navigation System :</strong> 4 components intégrés pour créer des systèmes de navigation et de feedback utilisateur professionnels
            </p>
          </div>
        </section>

        <!-- Business Use Cases Overview -->
        <section 
          class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12"
          aria-labelledby="use-cases-heading"
          role="region"
        >
          <h2 id="use-cases-heading" class="sr-only">Business use cases for navigation components</h2>
          
          <!-- Site Navigation -->
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-950/20 dark:to-indigo-950/20 border border-blue-200 dark:border-blue-800 rounded-lg p-4">
            <div class="flex items-center mb-3">
              <span class="text-2xl mr-3" aria-hidden="true">🧭</span>
              <h3 class="text-lg font-semibold text-blue-800 dark:text-blue-200">Site Navigation</h3>
            </div>
            <p class="text-sm text-blue-600 dark:text-blue-400 mb-3">
              Orientation utilisateur et navigation hiérarchique
            </p>
            <ul class="text-xs text-blue-600 dark:text-blue-400 space-y-1" role="list">
              <li role="listitem">• <strong>Breadcrumb :</strong> Chemin de navigation clair</li>
              <li role="listitem">• <strong>Tabs :</strong> Organisation du contenu par sections</li>
              <li role="listitem">• <strong>Badge :</strong> Statuts et notifications visuelles</li>
            </ul>
          </div>

          <!-- User Feedback & Status -->
          <div class="bg-gradient-to-br from-green-50 to-emerald-50 dark:from-green-950/20 dark:to-emerald-950/20 border border-green-200 dark:border-green-800 rounded-lg p-4">
            <div class="flex items-center mb-3">
              <span class="text-2xl mr-3" aria-hidden="true">💬</span>
              <h3 class="text-lg font-semibold text-green-800 dark:text-green-200">User Feedback</h3>
            </div>
            <p class="text-sm text-green-600 dark:text-green-400 mb-3">
              Messages et retours d'information système
            </p>
            <ul class="text-xs text-green-600 dark:text-green-400 space-y-1" role="list">
              <li role="listitem">• <strong>Alert :</strong> Messages système (succès, erreur, info)</li>
              <li role="listitem">• <strong>Badge :</strong> Compteurs et indicateurs d'état</li>
              <li role="listitem">• <strong>Breadcrumb :</strong> Position actuelle dans la structure</li>
            </ul>
          </div>
        </section>

        <!-- Démonstration interactive des composants navigation -->
        <section aria-labelledby="demo-heading" role="region" class="mb-12">
          <h2 id="demo-heading" class="text-2xl font-semibold text-foreground mb-6">
            ⚡ Interactive Navigation Demonstrations
          </h2>
          <NavigationShowcaseDemo client:load />
        </section>

        <!-- Component Implementation Patterns -->
        <section 
          class="bg-muted/30 rounded-lg p-6 mb-12"
          aria-labelledby="patterns-heading"
          role="region"
        >
          <h3 id="patterns-heading" class="text-xl font-semibold text-foreground mb-6">
            🔧 Implementation Patterns & Business Use Cases
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            
            <!-- E-commerce Navigation -->
            <div>
              <h4 class="font-semibold text-foreground mb-3 flex items-center">
                <span class="text-lg mr-2" aria-hidden="true">🛒</span>
                E-commerce Navigation
              </h4>
              <div class="bg-card border rounded p-3 text-sm font-mono mb-3">
                <div class="text-muted-foreground">// Product page navigation</div>
                <div>&lt;Breadcrumb&gt; Home / Category / Product</div>
                <div>&lt;Tabs&gt; Description | Reviews | Specs</div>
                <div>&lt;Badge&gt; Stock status, Rating</div>
                <div>&lt;Alert&gt; Price changes, Promotions</div>
              </div>
              <ul class="text-xs text-muted-foreground space-y-1" role="list">
                <li role="listitem">• Navigation hiérarchique produits</li>
                <li role="listitem">• Organisation contenu par onglets</li>
                <li role="listitem">• Indicateurs visuels stock/statut</li>
                <li role="listitem">• Alertes promotionnelles</li>
              </ul>
            </div>

            <!-- Admin Dashboard -->
            <div>
              <h4 class="font-semibold text-foreground mb-3 flex items-center">
                <span class="text-lg mr-2" aria-hidden="true">📊</span>
                Admin Dashboard
              </h4>
              <div class="bg-card border rounded p-3 text-sm font-mono mb-3">
                <div class="text-muted-foreground">// Dashboard navigation</div>
                <div>&lt;Breadcrumb&gt; Dashboard / Users / Profile</div>
                <div>&lt;Tabs&gt; Overview | Analytics | Settings</div>
                <div>&lt;Badge&gt; Notifications count</div>
                <div>&lt;Alert&gt; System status, Updates</div>
              </div>
              <ul class="text-xs text-muted-foreground space-y-1" role="list">
                <li role="listitem">• Navigation admin multi-niveaux</li>
                <li role="listitem">• Sections dashboard organisées</li>
                <li role="listitem">• Compteurs notifications/alertes</li>
                <li role="listitem">• Messages système temps réel</li>
              </ul>
            </div>

            <!-- Support & Documentation -->
            <div>
              <h4 class="font-semibold text-foreground mb-3 flex items-center">
                <span class="text-lg mr-2" aria-hidden="true">📚</span>
                Support & Documentation
              </h4>
              <div class="bg-card border rounded p-3 text-sm font-mono mb-3">
                <div class="text-muted-foreground">// Help center navigation</div>
                <div>&lt;Breadcrumb&gt; Help / Category / Article</div>
                <div>&lt;Tabs&gt; FAQ | Guides | Contact</div>
                <div>&lt;Badge&gt; Article status, Difficulty</div>
                <div>&lt;Alert&gt; Important updates</div>
              </div>
              <ul class="text-xs text-muted-foreground space-y-1" role="list">
                <li role="listitem">• Structure documentation hiérarchique</li>
                <li role="listitem">• Catégories d'aide par onglets</li>
                <li role="listitem">• Niveaux de difficulté visuels</li>
                <li role="listitem">• Alertes mises à jour importantes</li>
              </ul>
            </div>

            <!-- Corporate Website -->
            <div>
              <h4 class="font-semibold text-foreground mb-3 flex items-center">
                <span class="text-lg mr-2" aria-hidden="true">🏢</span>
                Corporate Website
              </h4>
              <div class="bg-card border rounded p-3 text-sm font-mono mb-3">
                <div class="text-muted-foreground">// Corporate site navigation</div>
                <div>&lt;Breadcrumb&gt; Company / About / Team</div>
                <div>&lt;Tabs&gt; Services | Portfolio | Careers</div>
                <div>&lt;Badge&gt; New positions, Certifications</div>
                <div>&lt;Alert&gt; Company news, Events</div>
              </div>
              <ul class="text-xs text-muted-foreground space-y-1" role="list">
                <li role="listitem">• Navigation institutionnelle claire</li>
                <li role="listitem">• Présentation services/portfolio</li>
                <li role="listitem">• Indicateurs recrutement/certifications</li>
                <li role="listitem">• Actualités et événements</li>
              </ul>
            </div>
          </div>
        </section>

        <!-- Technical Features -->
        <section 
          class="bg-card border border-border rounded-lg p-6 mb-12"
          aria-labelledby="features-heading"
          role="region"
        >
          <h3 id="features-heading" class="text-xl font-semibold text-card-foreground mb-6">
            🔧 Technical Features & Accessibility
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div>
              <h4 class="font-semibold text-foreground mb-3 flex items-center">
                <span class="text-lg mr-2" aria-hidden="true">♿</span>
                Accessibility First
              </h4>
              <ul class="text-sm text-muted-foreground space-y-1" role="list">
                <li role="listitem">• <strong>Breadcrumb :</strong> navigation landmarks</li>
                <li role="listitem">• <strong>Tabs :</strong> ARIA tabpanel controls</li>
                <li role="listitem">• <strong>Alert :</strong> live regions announce</li>
                <li role="listitem">• <strong>Badge :</strong> semantic status info</li>
                <li role="listitem">• Keyboard navigation complete</li>
              </ul>
            </div>
            <div>
              <h4 class="font-semibold text-foreground mb-3 flex items-center">
                <span class="text-lg mr-2" aria-hidden="true">🎨</span>
                Visual Design
              </h4>
              <ul class="text-sm text-muted-foreground space-y-1" role="list">
                <li role="listitem">• <strong>Consistent:</strong> Design system coherent</li>
                <li role="listitem">• <strong>Responsive:</strong> Mobile-first approach</li>
                <li role="listitem">• <strong>Dark mode:</strong> Adaptation automatique</li>
                <li role="listitem">• <strong>Variants:</strong> Multiple styles disponibles</li>
                <li role="listitem">• <strong>Animations:</strong> Micro-interactions fluides</li>
              </ul>
            </div>
            <div>
              <h4 class="font-semibold text-foreground mb-3 flex items-center">
                <span class="text-lg mr-2" aria-hidden="true">⚡</span>
                Performance
              </h4>
              <ul class="text-sm text-muted-foreground space-y-1" role="list">
                <li role="listitem">• <strong>Lightweight:</strong> CSS minimal</li>
                <li role="listitem">• <strong>Tree-shaking:</strong> Import sélectif</li>
                <li role="listitem">• <strong>No JS:</strong> Composants purs CSS</li>
                <li role="listitem">• <strong>Fast render:</strong> DOM optimisé</li>
                <li role="listitem">• <strong>Cached:</strong> Styles réutilisables</li>
              </ul>
            </div>
          </div>
        </section>

        <!-- Business Value Section -->
        <section 
          class="bg-gradient-to-r from-blue-50 to-purple-50 dark:from-blue-950/20 dark:to-purple-950/20 border border-blue-200 dark:border-blue-800 rounded-lg p-6 mb-12"
          aria-labelledby="business-value-heading"
          role="region"
        >
          <h3 id="business-value-heading" class="text-lg font-semibold text-blue-800 dark:text-blue-200 mb-4">
            💼 Valeur Business - Navigation & Feedback System
          </h3>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h4 class="font-semibold text-blue-700 dark:text-blue-300 mb-2">Impact UX Direct :</h4>
              <ul class="text-sm text-blue-600 dark:text-blue-400 space-y-1" role="list">
                <li role="listitem">• <strong>Taux de conversion :</strong> +25% avec navigation claire</li>
                <li role="listitem">• <strong>Temps sur site :</strong> +40% grâce aux breadcrumbs</li>
                <li role="listitem">• <strong>Taux de rebond :</strong> -30% avec feedback visuel</li>
                <li role="listitem">• <strong>Satisfaction :</strong> +50% navigation intuitive</li>
                <li role="listitem">• <strong>Support :</strong> -20% tickets grâce aux alertes</li>
              </ul>
            </div>
            <div>
              <h4 class="font-semibold text-blue-700 dark:text-blue-300 mb-2">ROI Développement :</h4>
              <ul class="text-sm text-blue-600 dark:text-blue-400 space-y-1" role="list">
                <li role="listitem">• <strong>Temps dev :</strong> -60% avec composants prêts</li>
                <li role="listitem">• <strong>Maintenance :</strong> -40% code standardisé</li>
                <li role="listitem">• <strong>Testing :</strong> -50% patterns éprouvés</li>
                <li role="listitem">• <strong>Accessibilité :</strong> Conformité WCAG intégrée</li>
                <li role="listitem">• <strong>Évolutivité :</strong> Architecture modulaire</li>
              </ul>
            </div>
          </div>
        </section>

        <!-- Quick Links to Other Showcases -->
        <section 
          class="border border-border rounded-lg p-6 mb-12"
          aria-labelledby="related-heading"
          role="region"
        >
          <h3 id="related-heading" class="text-xl font-semibold text-foreground mb-4">
            🔗 Related Component Showcases
          </h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            <a 
              href="/components-showcase" 
              class="flex items-center p-3 rounded-lg border bg-card hover:bg-accent/50 transition-colors group"
              aria-label="View all components overview"
            >
              <span class="text-xl mr-3" aria-hidden="true">🧩</span>
              <div>
                <div class="font-medium group-hover:text-primary transition-colors">All Components</div>
                <div class="text-xs text-muted-foreground">Complete overview</div>
              </div>
            </a>
            <a 
              href="/form-showcase" 
              class="flex items-center p-3 rounded-lg border bg-card hover:bg-accent/50 transition-colors group"
              aria-label="Explore form components"
            >
              <span class="text-xl mr-3" aria-hidden="true">📝</span>
              <div>
                <div class="font-medium group-hover:text-primary transition-colors">Form Components</div>
                <div class="text-xs text-muted-foreground">Business forms</div>
              </div>
            </a>
            <a 
              href="/data-display-showcase" 
              class="flex items-center p-3 rounded-lg border bg-card hover:bg-accent/50 transition-colors group"
              aria-label="Explore data display components"
            >
              <span class="text-xl mr-3" aria-hidden="true">📊</span>
              <div>
                <div class="font-medium group-hover:text-primary transition-colors">Data Display</div>
                <div class="text-xs text-muted-foreground">Tables, avatars, tooltips</div>
              </div>
            </a>
            <a 
              href="/advanced-showcase" 
              class="flex items-center p-3 rounded-lg border bg-card hover:bg-accent/50 transition-colors group"
              aria-label="Explore advanced components"
            >
              <span class="text-xl mr-3" aria-hidden="true">🔮</span>
              <div>
                <div class="font-medium group-hover:text-primary transition-colors">Advanced</div>
                <div class="text-xs text-muted-foreground">Calendar, command, sonner</div>
              </div>
            </a>
          </div>
        </section>

        <!-- Navigation  -->
        <nav aria-label="Showcase navigation" role="navigation">
          <Navigation currentPage="navigation-showcase" />
        </nav>

      </div>
    </section>
  </main>
</Layout>