---
// Grid Showcase Page - Version Simple qui Fonctionne
// Path: src/pages/grid-showcase.astro

import Layout from '../components/layouts/Layout.astro';
import GridContainer from '../components/layouts/GridContainer.astro';
import SectionTemplates from '../components/layouts/SectionTemplates.astro';
import { FeatureTabs, InteractivePricing, AnimatedStats, ProcessSteps } from '../components/islands/ContentBlocks';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '../components/ui/card';
import { Badge } from '../components/ui/badge';
import { Button } from '../components/ui/button';
---

<Layout 
  title="Grid System Showcase"
  description="Complete demonstration of our flexible grid system"
  currentPage="grid-showcase"
  headerVariant="business"
  footerVariant="business"
  showCTA={true}
  ctaText="Try Grid System"
  ctaHref="/try-grid-system"
  keywords={["grid system, layout templates, content blocks, responsive design"]}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary/5 via-background to-secondary/5 py-16" role="banner" aria-labelledby="hero-title">
    <GridContainer variant="wide" columns={1} gap="lg">
      <div class="text-center max-w-4xl mx-auto">
        <div class="flex items-center justify-center space-x-2 mb-6">
          <span class="text-4xl" aria-hidden="true">üìê</span>
          <Badge variant="secondary" className="text-sm font-medium">
            Phase 2.3.3 Complete
          </Badge>
        </div>
        
        <h1 id="hero-title" class="text-4xl lg:text-5xl font-bold text-foreground mb-6">
          Grid System Showcase
        </h1>
        
        <p class="text-xl text-muted-foreground mb-8 leading-relaxed">
          Discover our comprehensive grid system featuring responsive containers, 
          business templates, interactive blocks, and complete page compositions.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center" role="group" aria-label="Grid system exploration actions">
          <Button size="lg" className="text-lg px-8" aria-label="Explore interactive grid components and content blocks">
            <span class="mr-2" aria-hidden="true">üöÄ</span>
            Explore Components
          </Button>
          <Button variant="outline" size="lg" className="text-lg px-8" aria-label="View pre-built section templates and layouts">
            <span class="mr-2" aria-hidden="true">üìö</span>
            View Templates
          </Button>
        </div>
      </div>
    </GridContainer>
  </section>

  <!-- Grid System Overview -->
  <section class="py-16" role="region" aria-labelledby="overview-title">
    <GridContainer variant="default" columns={1} gap="lg">
      <div class="text-center mb-12">
        <h2 id="overview-title" class="text-3xl font-bold text-foreground mb-4">Grid System Components</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Four main components that work together to create professional, responsive layouts.
        </p>
      </div>

      <GridContainer columns={4} gap="lg">
        <div role="list" aria-label="Grid system main components" class="contents">
          <Card className="hover:shadow-lg transition-all duration-200 hover:scale-105" role="listitem">
            <CardHeader className="text-center">
              <div class="text-3xl mb-2" aria-hidden="true">üì¶</div>
              <CardTitle className="text-lg">GridContainer</CardTitle>
              <CardDescription>
                Responsive 12-column grid with 4 container variants
              </CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="text-sm space-y-2 text-muted-foreground" role="list" aria-label="GridContainer features">
                <li role="listitem">‚Ä¢ 4 container widths</li>
                <li role="listitem">‚Ä¢ Responsive columns</li>
                <li role="listitem">‚Ä¢ Flexible spacing</li>
                <li role="listitem">‚Ä¢ Alignment control</li>
              </ul>
            </CardContent>
          </Card>

          <Card className="hover:shadow-lg transition-all duration-200 hover:scale-105" role="listitem">
            <CardHeader className="text-center">
              <div class="text-3xl mb-2" aria-hidden="true">üé®</div>
              <CardTitle className="text-lg">SectionTemplates</CardTitle>
              <CardDescription>
                9 pre-built business section templates
              </CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="text-sm space-y-2 text-muted-foreground" role="list" aria-label="SectionTemplates types">
                <li role="listitem">‚Ä¢ Hero sections</li>
                <li role="listitem">‚Ä¢ Feature grids</li>
                <li role="listitem">‚Ä¢ Pricing tables</li>
                <li role="listitem">‚Ä¢ Team sections</li>
              </ul>
            </CardContent>
          </Card>

          <Card className="hover:shadow-lg transition-all duration-200 hover:scale-105" role="listitem">
            <CardHeader className="text-center">
              <div class="text-3xl mb-2" aria-hidden="true">‚ö°</div>
              <CardTitle className="text-lg">ContentBlocks</CardTitle>
              <CardDescription>
                4 interactive React components with animations
              </CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="text-sm space-y-2 text-muted-foreground" role="list" aria-label="ContentBlocks interactive features">
                <li role="listitem">‚Ä¢ Feature tabs</li>
                <li role="listitem">‚Ä¢ Interactive pricing</li>
                <li role="listitem">‚Ä¢ Animated stats</li>
                <li role="listitem">‚Ä¢ Process steps</li>
              </ul>
            </CardContent>
          </Card>

          <Card className="hover:shadow-lg transition-all duration-200 hover:scale-105" role="listitem">
            <CardHeader className="text-center">
              <div class="text-3xl mb-2" aria-hidden="true">üèóÔ∏è</div>
              <CardTitle className="text-lg">LayoutComposer</CardTitle>
              <CardDescription>
                6 complete page compositions ready to use
              </CardDescription>
            </CardHeader>
            <CardContent>
              <ul class="text-sm space-y-2 text-muted-foreground" role="list" aria-label="LayoutComposer page types">
                <li role="listitem">‚Ä¢ Landing pages</li>
                <li role="listitem">‚Ä¢ Business sites</li>
                <li role="listitem">‚Ä¢ SaaS platforms</li>
                <li role="listitem">‚Ä¢ Portfolio sites</li>
              </ul>
            </CardContent>
          </Card>
        </div>
      </GridContainer>
    </GridContainer>
  </section>

  <!-- GridContainer Demo -->
  <section class="py-16 bg-muted/30" role="region" aria-labelledby="container-demo-title">
    <GridContainer variant="default" columns={1} gap="lg">
      <div class="text-center mb-12">
        <h2 id="container-demo-title" class="text-3xl font-bold text-foreground mb-4">GridContainer Variants</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Four container widths to match any design need, with responsive column systems.
        </p>
      </div>

      <div class="space-y-8" role="list" aria-label="GridContainer variant demonstrations">
        <!-- Default Container -->
        <div role="listitem">
          <h3 class="text-xl font-semibold mb-4">Default Container</h3>
          <div class="border border-border rounded-lg p-4 bg-background" role="region" aria-label="Default container demonstration with 3 columns">
            <GridContainer variant="default" columns={3} gap="md">
              <Card><CardContent className="pt-6 text-center">Item 1</CardContent></Card>
              <Card><CardContent className="pt-6 text-center">Item 2</CardContent></Card>
              <Card><CardContent className="pt-6 text-center">Item 3</CardContent></Card>
            </GridContainer>
          </div>
          <p class="text-sm text-muted-foreground mt-2">Standard container with padding ‚Ä¢ Perfect for most content</p>
        </div>

        <!-- Wide Container -->
        <div role="listitem">
          <h3 class="text-xl font-semibold mb-4">Wide Container</h3>
          <div class="border border-border rounded-lg p-4 bg-background" role="region" aria-label="Wide container demonstration with 4 columns">
            <GridContainer variant="wide" columns={4} gap="lg">
              <Card><CardContent className="pt-6 text-center">Feature 1</CardContent></Card>
              <Card><CardContent className="pt-6 text-center">Feature 2</CardContent></Card>
              <Card><CardContent className="pt-6 text-center">Feature 3</CardContent></Card>
              <Card><CardContent className="pt-6 text-center">Feature 4</CardContent></Card>
            </GridContainer>
          </div>
          <p class="text-sm text-muted-foreground mt-2">Wider for landing pages ‚Ä¢ Extra space for showcasing</p>
        </div>
      </div>
    </GridContainer>
  </section>

  <!-- SectionTemplates Demo -->
  <section class="py-16" role="region" aria-labelledby="templates-demo-title">
    <GridContainer variant="default" columns={1} gap="lg">
      <div class="text-center mb-12">
        <h2 id="templates-demo-title" class="text-3xl font-bold text-foreground mb-4">Section Templates</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Pre-built section templates for rapid page construction.
        </p>
      </div>
    </GridContainer>

    <!-- Hero Template Demo -->
    <div role="region" aria-label="Hero section template demonstration">
      <SectionTemplates 
        template="hero"
        variant="business"
        title="Transform Your Business"
        subtitle="Professional Solution"
        description="A powerful hero section with call-to-action buttons that convert visitors into customers."
        showBackground={true}
      />
    </div>

    <!-- Features Template Demo -->
    <div role="region" aria-label="Features section template demonstration">
      <SectionTemplates 
        template="features"
        variant="default"
        title="Powerful Features"
        description="Showcase your product features with beautiful cards and clear descriptions."
      />
    </div>

    <!-- Stats Template Demo -->
    <div role="region" aria-label="Statistics section template demonstration">
      <SectionTemplates template="stats" showBackground={true} />
    </div>
  </section>

  <!-- Interactive Content Blocks -->
  <section class="py-16 bg-muted/30" role="region" aria-labelledby="interactive-blocks-title">
    <GridContainer variant="default" columns={1} gap="lg">
      <div class="text-center mb-12">
        <h2 id="interactive-blocks-title" class="text-3xl font-bold text-foreground mb-4">Interactive Content Blocks</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          React-powered interactive components that engage users dynamically.
        </p>
      </div>

      <div class="space-y-16" role="list" aria-label="Interactive content block demonstrations">
        <!-- Feature Tabs Block -->
        <div role="listitem">
          <h3 class="text-xl font-semibold mb-6 text-center">Feature Tabs - Interactive Showcase</h3>
          <div class="border border-border rounded-lg p-6 bg-card" role="region" aria-label="Interactive feature tabs component demonstration">
            <FeatureTabs client:load aria-label="Interactive feature tabs showing product capabilities with tabbed navigation" />
          </div>
        </div>

        <!-- Animated Stats Block -->
        <div role="listitem">
          <h3 class="text-xl font-semibold mb-6 text-center">Animated Stats - Count Up Animation</h3>
          <div class="border border-border rounded-lg p-6 bg-card" role="region" aria-label="Animated statistics component demonstration">
            <AnimatedStats client:visible aria-label="Animated statistics counters showing business metrics with count-up animations" />
          </div>
        </div>

        <!-- Interactive Pricing Block -->
        <div role="listitem">
          <h3 class="text-xl font-semibold mb-6 text-center">Interactive Pricing - Smart Selection</h3>
          <div class="border border-border rounded-lg p-6 bg-card" role="region" aria-label="Interactive pricing component demonstration">
            <InteractivePricing client:load aria-label="Interactive pricing table with plan selection and feature comparison" />
          </div>
        </div>

        <!-- Process Steps Block -->
        <div role="listitem">
          <h3 class="text-xl font-semibold mb-6 text-center">Process Steps - Interactive Workflow</h3>
          <div class="border border-border rounded-lg p-6 bg-card" role="region" aria-label="Interactive process steps component demonstration">
            <ProcessSteps client:load aria-label="Interactive process steps showing workflow progression with step-by-step navigation" />
          </div>
        </div>
      </div>
    </GridContainer>
  </section>

  <!-- Business Applications -->
  <section class="py-16" role="region" aria-labelledby="business-apps-title">
    <GridContainer variant="default" columns={1} gap="lg">
      <div class="text-center mb-12">
        <h2 id="business-apps-title" class="text-3xl font-bold text-foreground mb-4">Business Applications</h2>
        <p class="text-lg text-muted-foreground max-w-3xl mx-auto">
          Real-world use cases where our grid system shines.
        </p>
      </div>

      <GridContainer columns={3} gap="lg">
        <div role="list" aria-label="Business application use cases" class="contents">
          <Card className="hover:shadow-lg transition-all duration-200" role="listitem">
            <CardHeader>
              <CardTitle className="flex items-center space-x-2">
                <span aria-hidden="true">‚ö°</span>
                <span>Rapid Prototyping</span>
              </CardTitle>
            </CardHeader>
            <CardContent>
              <div class="space-y-3 text-sm text-muted-foreground" role="list" aria-label="Rapid prototyping benefits">
                <div role="listitem">‚Ä¢ Test ideas quickly with pre-built templates</div>
                <div role="listitem">‚Ä¢ Iterate layouts without starting from scratch</div>
                <div role="listitem">‚Ä¢ Present professional mockups to clients</div>
                <div role="listitem">‚Ä¢ Validate concepts before full development</div>
              </div>
            </CardContent>
          </Card>

          <Card className="hover:shadow-lg transition-all duration-200" role="listitem">
            <CardHeader>
              <CardTitle className="flex items-center space-x-2">
                <span aria-hidden="true">üè¢</span>
                <span>Client Projects</span>
              </CardTitle>
            </CardHeader>
            <CardContent>
              <div class="space-y-3 text-sm text-muted-foreground" role="list" aria-label="Client project benefits">
                <div role="listitem">‚Ä¢ Deliver consistent quality across projects</div>
                <div role="listitem">‚Ä¢ Reduce development time by 70%</div>
                <div role="listitem">‚Ä¢ Focus on customization, not foundation</div>
                <div role="listitem">‚Ä¢ Maintain professional standards</div>
              </div>
            </CardContent>
          </Card>

          <Card className="hover:shadow-lg transition-all duration-200" role="listitem">
            <CardHeader>
              <CardTitle className="flex items-center space-x-2">
                <span aria-hidden="true">üîÑ</span>
                <span>A/B Testing</span>
              </CardTitle>
            </CardHeader>
            <CardContent>
              <div class="space-y-3 text-sm text-muted-foreground" role="list" aria-label="A/B testing capabilities">
                <div role="listitem">‚Ä¢ Quickly create layout variations</div>
                <div role="listitem">‚Ä¢ Test different section arrangements</div>
                <div role="listitem">‚Ä¢ Compare interactive vs static elements</div>
                <div role="listitem">‚Ä¢ Optimize conversion with data</div>
              </div>
            </CardContent>
          </Card>
        </div>
      </GridContainer>
    </GridContainer>
  </section>

  <!-- Final CTA -->
  <div role="region" aria-label="Call to action section">
    <SectionTemplates 
      template="cta"
      variant="business"
      title="Ready to Build with Our Grid System?"
      description="Experience the power of professional-grade layout components. Start building amazing websites today."
      showBackground={true}
    />
  </div>

</Layout>